<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtSearch"
        android:layout_width="365dp"
        android:layout_height="52dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#F44336"
        android:ems="10"
        android:hint="Ex. Cali, CO"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="367dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:text="SEARCH WEATHER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSearch" />

    <TextView
        android:id="@+id/lblCurrent"
        android:layout_width="361dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="#4AC376"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSearch" />

    <TextView
        android:id="@+id/lblmin"
        android:layout_width="361dp"
        android:layout_height="48dp"
        android:background="#4A8FC3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCurrent" />

    <TextView
        android:id="@+id/lblmax"
        android:layout_width="361dp"
        android:layout_height="48dp"
        android:background="#FFC107"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblmin" />

    <TextView
        android:id="@+id/textViewWeather"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:background="#F45C36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblmax" />

    <ImageView
        android:id="@+id/imgWeather"
        android:layout_width="131dp"
        android:layout_height="64dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWeather"
        app:srcCompat="@android:color/background_light" />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="349dp"
        android:layout_height="52dp"
        android:text="GO TO MAPS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgWeather"
        app:layout_constraintVertical_bias="0.302" />

</androidx.constraintlayout.widget.ConstraintLayout>